:80 {
  encode zstd gzip
  header {
    Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    X-Content-Type-Options "nosniff"
    X-Frame-Options "DENY"
    Referrer-Policy "no-referrer-when-downgrade"
    X-XSS-Protection "1; mode=block"
    Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-eval' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob:; connect-src 'self'; font-src 'self' data:; object-src 'none'; media-src 'self'; worker-src 'self' blob:; frame-ancestors 'none';"
    Permissions-Policy "geolocation=(), microphone=(), camera=()"
  }
  root * /var/www/dicty

  # Rate limiting for API endpoints
  @api_endpoints path /api/* /saml-auth/* /upload/*
  handle @api_endpoints {
    rate_limit {
      zone api_zone {
        key {remote_host}
        window 1m
        events 30
      }
    }
    reverse_proxy http://127.0.0.1:8000
  }

  # Handle other backend routes
  handle /saml-auth* {
    reverse_proxy http://127.0.0.1:8000
  }

  handle /admin* {
    reverse_proxy http://127.0.0.1:8000
  }

  handle /static* {
    reverse_proxy http://127.0.0.1:8000
  }

  handle /media* {
    reverse_proxy http://127.0.0.1:8000
  }

  # Handle WebSocket connections
  handle /ws* {
    reverse_proxy http://127.0.0.1:8000
  }

  # Handle everything else (React SPA)
  handle {
    try_files {path} /index.html
    file_server
  }
}


